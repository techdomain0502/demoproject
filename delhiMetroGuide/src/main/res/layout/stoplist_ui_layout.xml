<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/details"
            style="@style/details_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/journey_header"
            android:textSize="@dimen/journeydetail_textSize"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/station"
            style="@style/station_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details"
            android:text="@string/noOfStations"
            android:textSize="@dimen/fare_textSize"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/interchange"
            style="@style/station_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/station"
            android:text="@string/noOfInterchange"
            android:textSize="@dimen/fare_textSize"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/time"
            style="@style/station_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/interchange"
            android:text="@string/journeyTime"
            android:textSize="@dimen/fare_textSize"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/fare"
            style="@style/station_style"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:text="@string/normalfare"
            android:textSize="@dimen/fare_textSize"
            android:textStyle="bold"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/sideContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>