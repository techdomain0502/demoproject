<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonContainer">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/text1"
                style="@style/tutorial_main_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon"
                android:layout_centerHorizontal="true"
                android:text="@string/tutorialpage1_text1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text2"
                style="@style/tutorial_main_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:text="@string/tutorialpage1_text2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text3"
                style="@style/tutorial_sub_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2"
                android:text="@string/route_info" />

            <TextView
                android:id="@+id/text4"
                style="@style/tutorial_sub_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text3"
                android:text="@string/fare_info" />

            <TextView
                android:id="@+id/text5"
                style="@style/tutorial_sub_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text4"
                android:text="@string/line_info" />

            <TextView
                android:id="@+id/text9"
                style="@style/tutorial_sub_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text5"
                android:text="@string/nearby_metro_info"
                />


            <TextView
                android:id="@+id/text6"
                style="@style/tutorial_sub_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text9"
                android:text="@string/language_info"
                />

            <TextView
                android:id="@+id/text7"
                style="@style/tutorial_sub_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text6"
                android:text="@string/like_info"
                />

            <TextView
                android:id="@+id/text8"
                style="@style/tutorial_sub_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text7"
                android:layout_centerHorizontal="true"
                android:text="@string/navigate_info"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/tutorial_sub_text"
                android:layout_below="@+id/text8"
                android:text="@string/thanks"
                android:textStyle="bold|italic" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/buttonContainer"
        style="@style/tutorial_buttonContainer_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/actionbar_background">

        <Button
            android:id="@+id/next"
            style="@style/tutorial_next_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:text="@string/next"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>